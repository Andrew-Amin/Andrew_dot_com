<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <ListView
        android:id="@+id/lv_productsList_type_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_Buy_v"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/btn_Buy_v"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/btn_search_voice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/btn_bg"
        android:text="@string/Buy" />

    <TextView
        android:id="@+id/tv_totalPrice_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_search_voice"
        android:text="@string/total_price_goes_here"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50sp"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50sp" />

    <ImageButton
        android:id="@+id/btn_search_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0fff"
        app:srcCompat="@drawable/ic_microphone"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_voice_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"

        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:text="search result"/>

</RelativeLayout>